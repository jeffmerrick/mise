<div class="page-centered">
  <h1>Editing tag <em><%= @tag.name %></em></h1>
  <%= simple_form_for(@tag, as: "tag", url: tag_path(@tag)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
    </div>
    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
  <br><%= link_to icon("arrow-left").html_safe + " Back", :back %>
</div>